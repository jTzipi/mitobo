<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>target/mitobo-${project.version}.jar</source>
      <outputDirectory>jars</outputDirectory>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>LICENSE*</include>
        <include>README*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/docu</directory>
      <outputDirectory>share/docs</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/logo</directory>
      <outputDirectory>share/logo</outputDirectory>
      <includes>
	<include>MiToBo_logo.pdf</include>
	<include>MiToBo_logo.png</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/scripts</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>oprunner.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/scripts/R</directory>
      <outputDirectory>share/scripts/R</outputDirectory>
      <includes>
        <include>MTB*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/testimages</directory>
      <outputDirectory>testimages</outputDirectory>
      <includes>
        <include>scratch_example1.tif</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>jars</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <!-- it is unclear why, but "loci_tools" triggers redundant dependencies ImageJ complains about... -->
      <excludes>
	<exclude>de.unihalle.informatik.MiToBo.native:mitobo-native-${native.libdir}:jar:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>

